{{!-- panel: heading --}}
{{#if (or title description)}}
<header class="panel-heading">
  <span class="pull-left">
    <h3 class="panel-title">
      {{#if icon}}<span class="glyphicon {{icon}}"></span>{{/if}} {{title}}<br>
    </h3>
    <small>{{description}}</small>
  </span>

  <span class="pull-right">
    {{#if collapsible}}
    <a class="btn btn-default btn-xs" {{action "panelToggle"}}>
      <span class="glyphicon {{if collapsed "glyphicon-menu-up" "glyphicon-menu-down"}}"></span>
    </a>
    {{/if}}
  </span>
  <div class="clearfix"></div>
</header>
{{/if}}

{{!-- panel: body --}}
{{#bs-collapse collapsed=collapsed}}
  <div class="panel-body">
    {{yield}}
  </div>
{{/bs-collapse}}
