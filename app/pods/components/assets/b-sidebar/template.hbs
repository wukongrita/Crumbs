<!-- Sidebar user panel -->
<div class="user-panel">
  <div class="pull-left image">
    <img src="/assets/images/toko-aqina-profile-picture.png" class="img-circle" alt="User Image" />
  </div>
  <div class="pull-left info">
    <p>{{sessionManager.currentUser.name}}</p>

    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
  </div>
</div>

<!-- sidebar menu: : style can be found in sidebar.less -->
<ul class="sidebar-menu">
  <li>
    {{#link-to "m.dashboard" title="Dashboard"}}
      Dashboard
    {{/link-to}}
  </li>

  {{h-variable "moduleTitle" "noMenu" true}}

  {{#each sessionManager.currentUser.menus as |node|}}

    {{#if (not-eq (h-variable "moduleTitle") node.module.title)}}
      {{h-variable "moduleTitle" node.module.title true}}

      <li>
        <a title="{{node.module.title}}" class="text-uppercase cursor-default">
          {{node.module.title}}
        </a>
      </li>
    {{/if}}

    {{assets/b-sidebar-menu-item node=node level=1}}
  {{/each}}

</ul>

<div class="footer-main">
  &copy; Crumbs, 2008 &mdash; 2016
</div>

